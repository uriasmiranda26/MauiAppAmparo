<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppAmparo.Views.InformacoesPage"
             BackgroundColor="#003366">

    <VerticalStackLayout Padding="30" VerticalOptions="Start">
        <Label Text="Minhas Informações" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" TextColor="White"/>

        <BoxView HeightRequest="20" Color="Transparent"/>

        <Button Text="Ver Contato de Emergência" Style="{StaticResource BotaoSalvar}" Clicked="OnVerContatoEmergenciaClicked"/>
        <BoxView HeightRequest="15" Color="Transparent"/>

        <Button Text="Ver Medições de Pressão Arterial" Style="{StaticResource BotaoSalvar}" Clicked="OnVerMedicoesPressaoClicked"/>
        <BoxView HeightRequest="15" Color="Transparent"/>

        <Button Text="Ver Medições de Índice Glicêmico" Style="{StaticResource BotaoSalvar}" Clicked="OnVerMedicoesGlicemiaClicked"/>
        <BoxView HeightRequest="15" Color="Transparent"/>

        <Button Text="Voltar" Style="{StaticResource BotaoVoltar}" Clicked="OnVoltarClicked"/>
    </VerticalStackLayout>
</ContentPage>
