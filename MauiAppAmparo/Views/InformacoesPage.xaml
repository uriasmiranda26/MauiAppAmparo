<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppAmparo.Views.InformacoesPage"
             BackgroundColor="#003366">

    <VerticalStackLayout Padding="20" VerticalOptions="Start">
        <Label Text="Minhas Informações" FontSize="24" HorizontalOptions="Center" TextColor="White"/>

        <BoxView HeightRequest="70" Color="Transparent"/>
        

        <Button Text="Ver últimas medições" Style="{StaticResource BotaoSalvar}" Clicked="OnVerMedicoesClicked"/>
        <BoxView HeightRequest="15" Color="Transparent"/>
        <Button Text="Voltar" Style="{StaticResource BotaoVoltar}" Clicked="OnVoltarClicked"/>
    </VerticalStackLayout>
</ContentPage>
